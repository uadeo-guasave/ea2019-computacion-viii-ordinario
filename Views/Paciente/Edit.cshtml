@model PacienteViewModel
@{
  ViewData["Title"] = "Editar datos del paciente";
}

<div class="col-4">
  <form asp-action="Edit" method="post">
    <div class="form-group">
      <label asp-for="Nombre">Nombre</label>
      <input type="text" asp-for="Nombre" class="form-control">
    </div>
    
    <div class="form-group">
      <label asp-for="Apellidos">Apellidos</label>
      <input type="text" asp-for="Apellidos" class="form-control">
    </div>
  
    <div class="form-group">
      <label asp-for="Edad">Edad</label>
      <input type="number" asp-for="Edad" class="form-control">
    </div>
  
    <div class="form-check">
      <input type="radio" asp-for="Genero" value="Masculino" class="form-check-input">
      <label asp-for="Genero" class="form-check-label">
        Masculino
      </label>
    </div>
  
    <div class="form-check">
      <input type="radio" asp-for="Genero" value="Femenino" class="form-check-input">
      <label asp-for="Genero" class="form-check-label">
        Femenino
      </label>
    </div>
    <hr>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="/Paciente" class="btn btn-secondary">Cancelar</a>
  </form>
</div>